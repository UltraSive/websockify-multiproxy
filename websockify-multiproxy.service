# /etc/systemd/system/websockify-multiproxy.service
[Unit]
Description=websockify multiproxy (docker compose)
Requires=docker.service
After=docker.service network-online.target
Wants=network-online.target

[Service]
Type=oneshot
WorkingDirectory=/opt/websockify-multiproxy
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
RemainAfterExit=yes
TimeoutStartSec=60
TimeoutStopSec=60

[Install]
WantedBy=multi-user.target
